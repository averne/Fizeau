{
    "configurations": [
        {
            "name": "DKP Aarch64",
            "includePath": [
                "${workspaceFolder}/common",

                "${workspaceFolder}/lib/glad/include",
                "${workspaceFolder}/lib/glfw/include",
                "${workspaceFolder}/lib/imgui/include",
                "${workspaceFolder}/lib/inih/include",
                "${workspaceFolder}/lib/libstratosphere/include",
                "${workspaceFolder}/lib/libstratosphere/libstratosphere/libstratosphere/include",
                "${workspaceFolder}/lib/libstratosphere/libstratosphere/libvapours/include",

                "${workspaceFolder}/**",

                "~/Bureau/Switch/libnx/nx/source",
                "~/Bureau/Switch/libnx/nx/include",
                "~/Bureau/Switch/libnx/nx/include/switch",

                "${DEVKITPRO}/libnx/include",
                "${DEVKITPRO}/portlibs/switch/include",

                "${DEVKITPRO}/devkitA64/aarch64-none-elf/include",
                "${DEVKITPRO}/devkitA64/lib/gcc/aarch64-none-elf/*/include",

                "/usr/include"
            ],
            "defines": [
                "__SWITCH__",
                "DEBUG",
                "VERSION=\"0.0.0\"",
                "COMMIT=\"0000000\"",
                "ATMOSPHERE_IS_STRATOSPHERE",
                "ATMOSPHERE_BOARD_NINTENDO_SWITCH"
            ],
            "compilerPath": "${DEVKITPRO}/devkitA64/bin/aarch64-none-elf-gcc",
            "cStandard": "gnu11",
            "cppStandard": "gnu++20",
            "intelliSenseMode": "gcc-arm64"
        }
    ],
    "version": 4
}
